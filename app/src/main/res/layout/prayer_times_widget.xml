<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/waqt"
        android:fontFamily="@font/hind_siliguri_regular"
        android:textSize="10sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/fajar"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/hind_siliguri_regular"
                android:textStyle="bold"
                android:text="@string/fajr"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/widget_fajartime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/kalpurush"
                android:gravity="bottom"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Portion 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/juhar"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/hind_siliguri_regular"
                android:textStyle="bold"
                android:text="@string/dhuhr"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/widget_juhartime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/kalpurush"
                android:gravity="bottom"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Portion 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/asar"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/hind_siliguri_regular"
                android:textStyle="bold"
                android:text="@string/asr"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/widget_asartime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/kalpurush"
                android:gravity="bottom"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Portion 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/magrib"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/hind_siliguri_regular"
                android:textStyle="bold"
                android:text="@string/maghrib"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/widget_magribtime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/kalpurush"
                android:gravity="bottom"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Portion 5 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/isha"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/hind_siliguri_regular"
                android:textStyle="bold"
                android:text="@string/isha"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/widget_ishatime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/kalpurush"
                android:gravity="bottom"
                android:text="00.00"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>